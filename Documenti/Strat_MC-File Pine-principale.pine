    linreg_buy_stored := true
    confluence_stored := confluence_score

if linreg_position >= linreg_sensitivity and confluence_score <= 0.0
    linreg_sell_stored := true
    confluence_stored := confluence_score

// Buffer Pearson R per evitare perdite segnale
